@model IEnumerable<TesteP3Image.Models.SubCategorias>

@{
    ViewBag.Title = "Categorias";
}

<h2>Subcategorias</h2>

<p>
    @Html.ActionLink("Inserir nova Subcategoria [+]", "Inserir")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubCategoriaId)
        </th>
        <th>
            @Html.DisplayName("Categoria")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategoriaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.SubCategoriaId }) |
            @Html.ActionLink("Gerenciar Campos", "Index", "Campos", new { id=item.SubCategoriaId },null) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.SubCategoriaId })
        </td>
    </tr>
}

</table>
