@model IEnumerable<TesteP3Image.Models.Categorias>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Inserir nova Categoria [+]", "Inserir")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.CategoriaId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.CategoriaId })
        </td>
    </tr>
}

</table>
